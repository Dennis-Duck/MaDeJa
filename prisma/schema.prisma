generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  flirts    Flirt[]
  createdAt DateTime @default(now())
}

model Flirt {
  id          String   @id @default(cuid())
  title       String
  description String?
  steps       Step[]
  authorId    String
  author      User     @relation(fields: [authorId], references: [id])
  createdAt   DateTime @default(now())
}

model Step {
  id       String   @id @default(cuid())
  flirtId  String
  flirt    Flirt    @relation(fields: [flirtId], references: [id], onDelete: Cascade)
  content  String
  media    Media[]
  elements Element[]
  logics   Logic[]
  order    Int
}

model Media {
  id     String   @id @default(cuid())
  stepId String
  step   Step     @relation(fields: [stepId], references: [id], onDelete: Cascade)
  url    String
  type   String   // IMAGE / VIDEO
  x      Float @default(0)
  y      Float @default(0)
  z      Int   @default(0)
  width  Float?
  height Float?
}

model Element {
  id        String   @id @default(cuid())
  stepId    String
  step      Step     @relation(fields: [stepId], references: [id], onDelete: Cascade)
  type      String   // "BUTTON" | "TEXT" | "TIMER"
  x         Float    @default(0)
  y         Float    @default(0)
  z         Int      @default(0)
  width     Float?
  height    Float?
  text      String?
  textSegments TextSegment[]
  autoAdvance       Boolean? @default(false)
  autoAdvanceDelay  Int? 
}

model TextSegment {
  id        String   @id @default(cuid())
  elementId String
  element   Element  @relation(fields: [elementId], references: [id], onDelete: Cascade)
  order     Int      @default(0)
  text      String  
  
  @@unique([elementId, order])
}

model Logic {
  id          String   @id @default(cuid())
  stepId      String
  step        Step     @relation(fields: [stepId], references: [id], onDelete: Cascade)

  type        String   // "TRIGGER" | "JUMP" | "CHECK" | "ACTION"
  subtype     String?  // bv. "BUTTON_CLICK" | "TIMER" | "PAGE_LOAD" (afhankelijk van type)
  config      String?  // instellingen per type, eventueel json

  parentId    String?
  parentType  String?  // "TRIGGER" | "CHECK"

  x           Float    @default(0)
  y           Float    @default(0)
  z           Int      @default(0)
  width       Float?
  height      Float?
}




